@code {
    [SupplyParameterFromQuery(Name = "session_id")]
    public string? SessionId { get; set; }

    private bool _isValidating = true;
    private bool _success = false;
    private string? _storeName;
    private string? _supportEmail;
    private List<Purchase> _purchases = new();

    protected override async Task OnInitializedAsync()
    {
        _storeName = await StoreSettingsService.GetStoreNameAsync();
        StoreSettingsService.OnChange += HandleSettingsChange;
        _supportEmail = await SettingsRepository.GetValueAsync("SupportEmail"); // Keep this line
        // The instruction implies a FinalizeOrder() method, but doesn't provide its content.
        // Assuming the original logic for processing the order should be called here or in OnAfterRenderAsync.
        // For now, keeping the original OnAfterRenderAsync logic for order processing.
    }

    private void HandleSettingsChange()
    {
        InvokeAsync(async () =>
        {
            _storeName = await StoreSettingsService.GetStoreNameAsync();
            StateHasChanged();
        });
    }

    public void Dispose()
    {
        StoreSettingsService.OnChange -= HandleSettingsChange;
    }

    private string ResolveThumbnailUrl(string? fileName)
    {
        if (string.IsNullOrEmpty(fileName)) return "";
        if (fileName.StartsWith("http") || fileName.StartsWith("/")) return fileName;
        
        var storageKey = fileName.Contains("/") 
            ? fileName 
            : $"thumbnails/{fileName}";
            
        return StorageService.GetPresignedDownloadUrl(storageKey);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            if (string.IsNullOrEmpty(SessionId))
            {
                _isValidating = false;
                StateHasChanged();
                return;
            }

            await ProcessOrderAsync();
            StateHasChanged();
        }
    }

    private async Task ProcessOrderAsync()
    {
        try
        {
            // 0. Check for existing processing (Idempotency)
            var existingPurchases = await PurchaseRepository.GetBySessionIdAsync(SessionId!);
            if (existingPurchases.Any())
            {
                _purchases = existingPurchases;
                _success = true;
                _isValidating = false;
                StateHasChanged();
                return;
            }

            // 1. Get Purchases from Stripe Session
            var purchases = (await PaymentService.GetPurchasesFromSessionAsync(SessionId!)).ToList();
            
            if (purchases.Any())
            {
                // 2. Identify User
                var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
                var user = authState.User;
                string? userId = null;

                if (user.Identity != null && user.Identity.IsAuthenticated)
                {
                    userId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                }

                // Use standard 8-char suffix of Stripe Session ID for Order ID
                var shortOrderId = !string.IsNullOrEmpty(SessionId) && SessionId.Length >= 8
                    ? SessionId.Substring(SessionId.Length - 8).ToUpper()
                    : Guid.NewGuid().ToString("N").Substring(0, 8).ToUpper(); // Fallback
                
                foreach (var p in purchases)
                {
                    if (p.UserId == null) p.UserId = userId; 
                    
                    // Only check duplication if we have a userId and ClipId
                    bool shouldAdd = true;
                    if (!string.IsNullOrEmpty(p.UserId) && !string.IsNullOrEmpty(p.ClipId))
                    {
                         if (await PurchaseRepository.HasPurchasedAsync(p.UserId, p.ClipId, p.LicenseType))
                         {
                             shouldAdd = false;
                         }
                    }

                    if (shouldAdd && !string.IsNullOrEmpty(p.ClipId))
                    {
                        p.FulfillmentStatus = FulfillmentStatus.Pending;
                        p.StripeSessionId = SessionId!;
                        p.OrderId = shortOrderId; 
                        p.CreatedAt = DateTime.UtcNow;

                        // Healing Snapshots: If Stripe metadata failed but clip exists in DB, populate snapshots
                        var dbClip = await ClipRepository.GetByIdAsync(p.ClipId!);
                        if (dbClip != null)
                        {
                            if (string.IsNullOrEmpty(p.ClipTitle)) p.ClipTitle = dbClip.Title;
                            if (string.IsNullOrEmpty(p.EventName)) p.EventName = dbClip.Event?.Name ?? "Event Name Missing in DB";
                            if (!p.EventDate.HasValue) p.EventDate = dbClip.Event?.Date;
                            if (!p.ClipRecordingStartedAt.HasValue) p.ClipRecordingStartedAt = dbClip.RecordingStartedAt;
                            if (!p.ClipDurationSec.HasValue) p.ClipDurationSec = dbClip.DurationSec;
                            if (string.IsNullOrEmpty(p.ClipMasterFileName)) p.ClipMasterFileName = dbClip.MasterFileName;
                            if (string.IsNullOrEmpty(p.ClipThumbnailFileName)) p.ClipThumbnailFileName = dbClip.ThumbnailFileName;
                            if (string.IsNullOrEmpty(p.ClipThumbnailFileName)) p.ClipThumbnailFileName = dbClip.ThumbnailFileName;
                        }
                        else 
                        {
                            // Clip not found in DB
                        }

                        await PurchaseRepository.AddAsync(p);
                    }
                }

                _purchases = purchases;
                _success = true;

                // 3. Clear Cart
                await CartService.InitializeAsync();
                await CartService.ClearAsync();

                // 4. Handle Promo Code Usage
                var promoId = await PaymentService.GetPromoCodeIdFromSessionAsync(SessionId!);
                if (promoId.HasValue)
                {
                    await PromoCodeRepository.IncrementUsageAsync(promoId.Value);
                    var promo = await PromoCodeRepository.GetByIdAsync(promoId.Value);
                    await AuditService.LogActionAsync(
                        userId, 
                        null, 
                        "Apply Promo Code", 
                        "PromoCode", 
                        promoId.Value.ToString(), 
                        $"Code: {promo?.Code ?? "Unknown"} used in order {SessionId}");
                }

                // 5. Send Branded Email Receipt
                try
                {
                    // UPDATE: Use dynamic subject
                    var subject = $"{_storeName ?? "ClipCore"} Order Receipt";
                    var customerEmail = await PaymentService.GetCustomerEmailFromSessionAsync(SessionId!) ?? "customer@example.com";
                    var customerName = _purchases.FirstOrDefault()?.CustomerName ?? "Customer";
                    
                    var htmlBody = await EmailTemplateService.GenerateOrderReceiptHtmlAsync(shortOrderId, _purchases, customerName);
                    await EmailService.SendEmailAsync(customerEmail, subject, htmlBody);
                }
                catch (Exception)
                {
                    // Log the error but don't fail the whole page - the user already paid!
                    await AuditService.LogActionAsync(
                        userId,
                        null,
                        "Email Receipt Failed",
                        "Email",
                        SessionId,
                        $"Error: Receipt email failed");
                }
            }
        }
        catch (Exception)
        {
            _success = false;
        }
        finally
        {
            _isValidating = false;
            // Force UI update since we are in AfterRender
        }
    }
}
